# Database
DATABASE_URL="postgresql://username:password@localhost:5432/teaching_practice_db?schema=public"

# Server
PORT=5000
NODE_ENV=development

# JWT
JWT_SECRET=your-secret-key-here-please-change-this-in-production
JWT_EXPIRES_IN=24h

# CORS
FRONTEND_URL=http://localhost:3000
# 本番環境では複数のオリジンをカンマ区切りで指定
# ALLOWED_ORIGINS=https://example.com,https://www.example.com

# File Upload (Development)
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# AWS S3 (Production)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=your-region
# AWS_S3_BUCKET=your-bucket-name

# Email (Nodemailer)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@teaching-practice.com

# Security
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Production Settings (uncomment in production)
# SSL_MODE=require
# TRUST_PROXY=true