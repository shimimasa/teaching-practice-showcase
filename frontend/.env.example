# Backend API URL
NEXT_PUBLIC_API_URL=http://localhost:5000

# NextAuth.js
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-here-please-change-this-in-production

# Public Site Info
NEXT_PUBLIC_SITE_NAME=授業実践紹介プラットフォーム
NEXT_PUBLIC_SITE_DESCRIPTION=学校に通えない子どもたちのための学習機会プラットフォーム

# Upload Limits (in bytes)
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/gif,image/webp
NEXT_PUBLIC_ALLOWED_PDF_TYPES=application/pdf

# Feature Flags
NEXT_PUBLIC_ENABLE_COMMENTS=true
NEXT_PUBLIC_ENABLE_RATINGS=true
NEXT_PUBLIC_ENABLE_CONTACT=true

# Analytics (optional)
# NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX
# NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# Production Settings (uncomment in production)
# NEXT_PUBLIC_API_URL=https://api.your-domain.com
# NEXTAUTH_URL=https://your-domain.com